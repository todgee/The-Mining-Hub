<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Settings - Chatbot</title>
    <link rel="stylesheet" href="/CSS/settings.css" />
    <link rel="stylesheet" href="/CSS/navbar.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="/JS/profile.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const designateButton = document.getElementById('designateContacts');
        const emergencyContactDiv = document.getElementById('emergencyContactDiv');
        const contactForm = document.getElementById('contactForm');
        const contactList = document.getElementById('contactList');
        const saveButton = document.querySelector('.save-profile-button');

        designateButton.addEventListener('click', function() {
          emergencyContactDiv.style.display = 'block';
          designateButton.style.display = 'none';
        });

        contactForm.addEventListener('submit', function(e) {
          e.preventDefault();
          const name = document.getElementById('contactName').value;
          const number = document.getElementById('contactNumber').value;
          
          const contactItem = document.createElement('div');
          contactItem.innerHTML = `<strong>${name}:</strong> ${number}`;
          contactList.appendChild(contactItem);

          document.getElementById('contactName').value = '';
          document.getElementById('contactNumber').value = '';

          emergencyContactDiv.style.display = 'none';
          designateButton.style.display = 'block';
        });

        saveButton.addEventListener('click', function() {
          alert('Changes saved successfully!');
        });
      });
    </script>
  </head>
  <body>
    <!-- Settings Page Container -->
    <div class="profile-container">
      <!-- Settings Title -->
      <div class="profile-box">
        <h1>Settings</h1>
        
        <!-- User Details -->
        <div class="profile-info">
          <p><strong>Username:</strong> <span id="username">George Blackwood</span></p>
          <p><strong>Email:</strong> <span id="email">gblackwood@gmail.com</span></p>
          <p><strong>Password:</strong> <input type="password" placeholder="Change Password" /></p>
        </div>

        <!-- Privacy Settings Section -->
        <div class="profile-info">
          <h3>Privacy Settings</h3>
          <div>
            <label for="twoFactorAuth">
              <input type="checkbox" id="twoFactorAuth" />
              Enable two-factor authentication
            </label>
          </div>
          <div>
            <label for="sessionTimeout">Session Timeout Duration:</label>
            <select id="sessionTimeout">
              <option value="5">5 minutes</option>
              <option value="10">10 minutes</option>
              <option value="15">15 minutes</option>
              <option value="30">30 minutes</option>
            </select>
          </div>
        </div>

        <div class="profile-info">
          <h3>Emergency Contact Options</h3>
          <button id="designateContacts">Designate Emergency Contacts</button>
          <div id="emergencyContactDiv" style="display: none;">
            <form id="contactForm">
              <input type="text" id="contactName" placeholder="Contact Name" required>
              <input type="tel" id="contactNumber" placeholder="Contact Number" required>
              <button type="submit">Add Contact</button>
            </form>
          </div>
          <div id="contactList"></div>
        </div>

        <!-- Save Changes Button -->
        <div class="save-profile-container">
          <button class="save-profile-button">
            <i class="fa fa-save"></i> Save Changes
          </button>
        </div>
      </div>
      <%- include('partials/navbar') %>
    </div>
  </body>
</html>
